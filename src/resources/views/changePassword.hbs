
<div class="page-container">
    <div class="main-content">
        <div class="container-fluid register">
            <!-- Breadcrumb Start -->
            <div class="row">
                <!-- POST -->

                <!--  Post -->
                <div class="col-md-9 register-right">
                    <form action="/{{user._id}}?_method=PATCH" method="post" >
                        <div class="tab-content" id="myTabContent">
                            <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
                                <h3 class="register-heading">THAY ĐÔI MẬT KHẨU</h3>
                                <div class="row register-form">
                                    <div class="col-md-2"></div>
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <input type="password" name="oldPassword" class="form-control" placeholder="Old Password *" value="" />
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="password" class="form-control"  placeholder="New Password *" value="" />
                                        </div>
                                        <div class="form-group">
                                            <input type="password" name="confirmPassword" class="form-control"  placeholder="Confirm New Password *" value="" />
                                        </div>
                                        {{#if error}}
                                            <div class="form-group">
                                                <div class="alert alert-danger alert-dismissible fade show">
                                                <button type="button" class="close" data-dismiss="alert">&times;</button>
                                                    {{error}}
                                                </div>
                                            </div>
                                        {{/if}}
                                        <div class="form-group">
                                            <button type="submit" class="btnRegister">Lưu</button>
                                        </div>
                                        
                                    </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    document.addEventListener('DOMContentLoaded', () => {
        
        var dataNewPassword = $('input[name="password"]');
        var dataConfirmNewPassword = $('input[name="confirmPassword"]');

        dataNewPassword.change(() => {
            if (dataNewPassword.val().length < 6) {
                alert('Mật khẩu quá ngắn!')
            };
        })

        dataConfirmNewPassword.change(()=> {
            if (dataConfirmNewPassword.val() !== dataNewPassword.val()) {
                
                alert('Xác nhận mật khẩu không khớp!');
            }
           
        })

        // when dialog confirm clicked
    });
</script>
